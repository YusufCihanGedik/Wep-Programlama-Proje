@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/KullaniciLayout.cshtml";
}

<section class="section blog-wrap">
	<div class="container">
		<div class="columns is-multiline">
			@foreach(var item in Model){
			<div class="column is-6-desktop is-6-tablet">
				<div class="blog-item has-text-centered mb-3 ">
					<img src="images/blog/1.jpg" alt="" class=" mb-4 rounded">
					<span class="letter-spacing text-color text-sm is-uppercase">Creativity</span>
					<h3 class="mb-2"><a href="blog-single.html">@item.BlogTitle</a></h3>
					<div class="blog-item-meta ">
						<span class="is-uppercase text-sm mr-3 letter-spacing">by themefisher</span>
						<span class="is-uppercase text-sm letter-spacing"><i class="ti-time mr-1"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</span>
							<span class="is-uppercase text-sm letter-spacing"><i class="ti-time mr-1">@item.Category.CategoryName</i> </span>
					</div>
					<p class="mt-3 mb-4">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,130).LastIndexOf(" ")). LastIndexOf...</p>
					<a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-main">Devamı Oku</a> 
				</div>
			</div>
			}
		</div>

		<div class="columns mt-5 is-justify-content-center">
			<div class="column is-8-widescreen has-text-centered">
				<nav class="post-navigation">
					<a class="current" href="#">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#">4</a>
					<a href="#">5</a>
					<a href="#"><i class="ti-angle-right"></i></a>
				</nav>
			</div>
		</div>
	</div>
</section>