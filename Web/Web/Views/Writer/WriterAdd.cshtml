@model Web.Models.AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgilerini Düzenleme</h4>
                <br />
                @Html.HiddenFor(x=>x.WriterID,new {@class ="form-control"})
                @Html.ValidationMessageFor(x=>x.WriterID)
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.WriterName,new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adres</label>
                        @Html.TextBoxFor(x=>x.WriterMail,new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x=>x.WriterPassword,new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword)
                    </div>

                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            @Html.TextBoxFor(x=>x.WriterImage,new {@class ="form-control"})
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterAbout)
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>


