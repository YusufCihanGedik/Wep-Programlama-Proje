                        <p>@item.AboutDetails2</p>
                    </div>
                </div>
                <div class="column is-4-desktop is-12-tablet"  data-aos-delay="1000">
                    <img src="images/about/home-8.jpg" alt="" class=" rounded">
                    <div class="about-info-item mt-4">
                        <h3 class="mb-3">Our Approach</h3>
                            <p>@item.AboutDetails2</p>
                    </div>
                </div>
            </div>
